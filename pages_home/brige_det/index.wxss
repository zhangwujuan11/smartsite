.btnbox {
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
  padding: 0;
  width: 100%;
}
.btnbox button {
  background-color: #fff;
  font-size: 28rpx;
  margin: 0;
  padding: 20rpx 0;
  width: 332rpx;
}
.btnbox .submit {
  background-color: #ff9d22;
  color: #fff;
}
.fails {
  font-size: 28rpx;
  line-height: 40rpx;
}
.isanable {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}
.iffail text {
  color: #666;
  font-size: 28rpx;
}
.iffail textarea {
  border: 2rpx solid #e9e9e9;
  height: 252rpx;
  margin: 0;
  padding: 0;
  width: 98%;
}
.passtext {
  color: #0e9474;
  margin-left: 15rpx;
}
.failtext {
  color: #d81e36;
  margin-left: 15rpx;
}
.waittext {
  color: #ff9d22;
  margin-left: 15rpx;
}
.outstatu {
  color: #004097;
}
