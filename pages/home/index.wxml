<view class="container">
    <view style="font-size: 30rpx;color: white; padding-top:100rpx;display: flex; flex-direction: column; align-items: center;  background-color:#004099;position: fixed; width: 100%;;z-index:100;">
        <view>智慧工地平台</view>
    </view>
    <view style="background-color:#004099;position: fixed; width: 100%;height: 500rpx;z-index:-999;border-radius: 0 0 50rpx 50rpx;"></view>
    <view style="display: flex; flex-direction: column; align-items: center;justify-content: center;margin-top:225rpx;width: 100%; z-index:98;padding: 20rpx 40rpx; box-sizing: border-box;">
        <view class="workbench">
            <image class="cover" mode="aspectFill" src="{{imagesdata}}" style="height: 413rpx;width: 690rpx;border-radius: 10rpx;"></image>
        </view>
        <view class="workbench flexbox fle-sb">
            <view class="tzbox">
                <view class="tzbox_titl">投资</view>
                <view class="tzbox_tit2">已完成投资</view>
                <view class="colory tzbox_tit2">￥<text class="fonwe">{{done}}</text>万元</view>
                <view class="tzbox_tit2">总投资</view>
                <view class="colorb tzbox_tit2">￥<text class="fonwe">{{sum}}</text>万元</view>
            </view>
            <view id="charpiebox">
                <ec-canvas canvasId="mychart-bar" ec="{{ec}}" id="mychart-dom-bar"></ec-canvas>
            </view>
        </view>
        <view class="workbench " style="margin-top: 0;">
            <view class="itembox">
                <view catchtap="open" class="items" data-name="party_building" id="total">
                    <image src="../../images/home_icon/dangjian.png" style="height: 80rpx;width: 80rpx;"></image>
                    <text>工地党建</text>
                </view>
                <view catchtap="open" class="items" data-name="rectification" id="check">
                    <image src="../../images/home_icon/xunshi.png" style="height: 80rpx;width: 80rpx;"></image>
                    <text>检查整改</text>
                </view>
                <view catchtap="open" class="items" data-name="quality_main" id="check">
                    <image src="../../images/home_icon/zhiliang.png" style="height: 80rpx;width: 80rpx;"></image>
                    <text>安全质量</text>
                </view>
                <view catchtap="open" class="items" data-name="profile" id="check">
                    <image src="../../images/home_icon/filrico.png" style="height: 80rpx;width: 80rpx;"></image>
                    <text>文档管理</text>
                </view>
                <view catchtap="open" class="items" data-name="bridge" id="check">
                    <image src="../../images/home_icon/bridge.png" style="height: 80rpx;width: 80rpx;"></image>
                    <text>梁片管理</text>
                </view>
            </view>
        </view>
    </view>
</view>
