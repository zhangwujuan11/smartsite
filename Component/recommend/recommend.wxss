.recommend {
  padding-top: 10rpx;
}
.big-box {
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #f3f3f3;
  border-radius: 12rpx;
  height: 180rpx;
  justify-content: center;
  margin: 10rpx auto 0;
  padding: 24rpx 20rpx;
  width: 98%;
}
.big-box,
.box-left {
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
}
.box-left {
  flex: 1;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
  padding-right: 30rpx;
}
.box-rank {
  height: 30rpx;
  position: relative;
  width: 100%;
}
.box-rank-number {
  background-color: #faf6f1;
  border-radius: 10rpx;
  color: #c6aa78;
  display: block;
  float: left;
  font-size: 22rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-right: 20rpx;
  text-align: center;
  width: 44rpx;
}
.rank-bg {
  background: linear-gradient(to bottom right, #ffb013, #ffcb24);
  color: #fff;
}
.read {
  color: #b6b5b6;
  display: block;
  float: left;
  font-size: 20rpx;
  line-height: 26rpx;
}
.title {
  word-wrap: break-word;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #353535;
  display: -webkit-box;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 40rpx;
  overflow: hidden;
  padding-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: normal !important;
}
.box-right {
  border-radius: 10rpx;
  height: 126rpx;
  overflow: hidden;
  width: 186rpx;
}
.box-right image {
  min-height: 100%;
  width: 100%;
}
